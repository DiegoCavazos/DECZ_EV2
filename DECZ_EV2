        "#ESTEPROGRAMA CREA ALEATORIAMENTE PERSONAJES(VILLANOS) CON DIFERENTES CARACTERISTICAS\n",
        "\n",
        "import random\n",
        "\n",
        "class Villano_Aleatorio():\n",
        "    nivel_vida = 0\n",
        "    dificultad = 0\n",
        "    rango_accion = 0\n",
        "    Alcance = \"\"\n",
        "\n",
        "    def _init_(self, nivel_vida=0, dificultad=0, rango_accion=0, Alcance=\"\"):\n",
        "        self.nivel_vida = nivel_vida\n",
        "        self.dificultad = dificultad\n",
        "        self.rango_accion = rango_accion\n",
        "        self.Alcance = Alcance\n",
        "\n",
        "    @property\n",
        "    def Habilidades_Aleatorias(self):\n",
        "      nivel_vida = random.randint(100, 1000)\n",
        "      dificultad = random.randint(1, 10)\n",
        "      rango_accion = random.randint(1,3)\n",
        "      if rango_accion == 1:\n",
        "        Alcance = \"Cuerpo a cuerpo\"\n",
        "      elif rango_accion == 2:\n",
        "        Alcance = \"Ataque a distancia\"\n",
        "      elif rango_accion == 3:\n",
        "        Alcance = \"Ataque intermedio\"\n",
        "      return nivel_vida, dificultad, Alcance\n",
        "\n",
        "    @property\n",
        "    def daño_ataque_final(self):\n",
        "        habilidades = self.Habilidades_Aleatorias\n",
        "        return habilidades[0] * habilidades[1]\n",
        "\n",
        "    def mostrar_personaje(self):\n",
        "      habilidades = self.Habilidades_Aleatorias\n",
        "      print(\"------------Estadísticas Villano------------\")\n",
        "      print(f\"\"\"  Nivel de Vida: {habilidades[0]}\n",
        "  Dificultad: {habilidades[1]}\n",
        "  Rango de acción: {habilidades[2]}\n",
        "  Daño ataque final: {self.daño_ataque_final}\"\"\")\n",
        "\n",
        "# Crea una instancia de la clase Villano\n",
        "villano = Villano_Aleatorio()\n",
        "\n",
        "# Imprime la instancia de la clase usando el método mostrar_personaje\n",
        "villano.mostrar_personaje()\n"
      ]
